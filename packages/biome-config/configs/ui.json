{
  "linter": {
    "rules": {
      "style": {
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "ui/src": {
                "message": "Avoid importing directly from ui/src from within the ui package which causes circular imports."
              }
            }
          }
        }
      }
    }
  }
}
