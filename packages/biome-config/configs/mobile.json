{
  "files": {
    "experimentalScannerIgnores": [".storybook/storybook.requires.ts", ".maestro/**"]
  },
  "formatter": {
    "includes": ["!ios/**", "!android/**", "!.storybook/storybook.requires.ts", "!**/metro.config.js"]
  },
  "linter": {
    "includes": [
      "!ios/**",
      "!android/**",
      "!.storybook/storybook.requires.ts",
      "!scripts/**",
      "!ReactotronConfig.ts",
      "!index.js"
    ],
    "rules": {
      "style": {
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "react-router": {
                "message": "Do not import react-router in native code. Use react-navigation instead."
              }
            }
          }
        }
      }
    }
  },
  "javascript": {
    "jsxRuntime": "reactClassic"
  },
  "overrides": [
    {
      "includes": ["**/utils/haptics/**"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "paths": {
                  "expo-haptics": "Allow expo-haptics in haptics utility files"
                }
              }
            }
          }
        }
      }
    },
    {
      "includes": [".maestro/scripts/**/*.ts"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": "off"
          },
          "suspicious": {
            "noConsole": "off"
          },
          "complexity": {
            "noUselessLoneBlockStatements": "off"
          }
        }
      }
    },
    {
      "includes": ["migrations.ts"],
      "linter": {
        "rules": {
          "style": {
            "useEnumInitializers": "off",
            "noNonNullAssertion": "off"
          },
          "suspicious": {
            "noEmptyInterface": "off",
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["*saga*.ts", "*Saga.ts", "handleDeepLink.ts"],
      "linter": {
        "rules": {
          "style": {
            "useEnumInitializers": "off"
          }
        }
      }
    }
  ]
}
