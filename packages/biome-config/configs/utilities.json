{
  "linter": {
    "rules": {
      "style": {
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "utilities/src": {
                "message": "Avoid importing directly from utilities/src from within the utilities package which causes circular imports."
              }
            }
          }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": ["src/index.ts", "src/platform/*", "src/addresses/*", "src/errors/*"],
      "linter": {
        "rules": {}
      }
    }
  ]
}
